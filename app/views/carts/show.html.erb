<div class="container mt-4">
  <h1>Your Cart</h1>
  <% if @cart.cart_items.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_items.each do |item| %>
          <tr>
            <td><%= item.product.title %></td>
            <td>$<%= item.price %></td>
            <td><%= item.quantity %></td>
            <td>$<%= item.total_price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-right">
      <h3>Total: $<%= @cart.cart_items.sum(&:total_price) %></h3>
      <!-- Later you can add a Checkout button here -->
    </div>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>
</div>
