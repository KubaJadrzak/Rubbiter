<div class="container mt-4">
  <h1>Your Cart</h1>
  <% if @cart.cart_items.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_items.each do |item| %>
          <tr class="cart-item">
            <td><%= item.product.title %></td>
            <td>$<%= item.price %></td>
            <td><%= item.quantity %></td>
            <td>$<%= item.total_price %></td>
            <td>
              <%= button_to cart_item_path(item), method: :delete,
                            class: "btn btn-sm text-dark p-0 m-0" do %>
                <i class="bi bi-trash" style="font-size: 1.0rem; color: black;"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Total: $<%= @cart.cart_items.sum(&:total_price) %></h3>
      <%= link_to new_order_path, class: "btn btn-primary btn-lg" do %>
        Place Order
      <% end %>
    </div>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>
</div>
