<div class="row">
  <div class="col-md-12">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-3">
          <div class="card mb-4">
            <img src="<%= image_url('default_product_image.svg') %>"
                 class="card-img-top"
                 alt="<%= product.title %>"
                 style="height: 180px; object-fit: contain;">
            <div class="card-body">
              <h6 class="card-title"><%= product.title %></h6>
              <p class="card-text" style="font-size: 0.9rem;"><%= truncate(product.content, length: 100) %></p>
            </div>
            <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between align-items-center">
              <span><strong>$<%= product.price %></strong></span>
              <%= button_to add_to_cart_path(product), method: :post, class: "btn btn-primary btn-sm" do %>
                <i class="bi bi-cart-plus"></i> Add to Cart
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
