<div class="card mt-3 ml-3" id="rubit_<%= rubit.id %>">
  <!-- Rubit Content -->
  <%= link_to rubit_path(rubit), class: "card-body d-block text-decoration-none text-dark" do %>
    <h5 class="card-title">@<%= rubit.user.email %></h5>
    <p class="card-text"><%= rubit.content %></p>
    <p class="text-muted small mb-0"><%= rubit.created_at.strftime("%b %e, %Y %l:%M %p") %></p>
  <% end %>

  <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between align-items-center">
    <!-- Like Section -->
    <%= render partial: "likes/like_section", locals: { rubit: rubit } %>

    <!-- Delete button (only for owner and if rubit is active) -->
    <% if rubit.user == current_user && rubit.active? %>
      <%= button_to "Delete", rubit_path(rubit), method: :delete, 
                    data: { turbo_stream: true, confirm: "Are you sure?" }, 
                    class: "btn btn-sm btn-danger" %>
    <% end %>
  </div>
</div>
