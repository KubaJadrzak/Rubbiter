<div class="card mt-3" id="rubit_<%= rubit.id %>">
  <div class="card-body">

    <%# Parent Rubit (context) %>
    <% if rubit.parent_rubit.present? %>
      <div class="mb-3 p-2 border rounded bg-light">
        <strong>In reply to:</strong>
        <div class="card mb-2">
          <div class="card-body p-2">
            <h5 class="card-title text-muted" style="font-size: 0.8rem;">
              @<%= rubit.user.username %>
            </h5>
            <p class="card-text"><%= rubit.parent_rubit.content %></p>
            <p class="text-muted small">
              <%= rubit.parent_rubit.created_at.strftime("%b %e, %Y %l:%M %p") %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <%# Child Rubit (the comment) %>
    <div>
      <h5 class="card-title text-muted" style="font-size: 0.8rem;">
        @<%= rubit.user.username %>
      </h5>
      <p class="card-text"><%= rubit.content %></p>
      <p class="text-muted small"><%= rubit.created_at.strftime("%b %e, %Y %l:%M %p") %></p>
    </div>
  </div>

  <%# Footer: Like + Delete (if authorized) %>
  <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between align-items-center p-2">
    <%= render 'likes/like_section', rubit: rubit %>

    <% if rubit.user == current_user %>
      <%= button_to rubit_path(rubit), method: :delete, 
                    data: { turbo_stream: true, confirm: "Are you sure?" }, 
                    class: "btn btn-sm text-dark" do %>
        <i class="bi bi-trash" style="font-size: 1.5rem; color: black;"></i> <!-- Black Trash Icon -->
      <% end %>
    <% end %>
  </div>
</div>
