<%= form_with(model: Rubit.new, url: rubits_path, class: "d-flex align-items-center gap-2") do |form| %>
  <%= form.text_area :content,
      rows: 2,
      class: "form-control flex-grow-1",
      placeholder: parent_rubit.present? ? "Rubit Something..." : "What's on your mind?",
      required: true %>

  <% if parent_rubit.present? %>
    <%= form.hidden_field :parent_rubit_id, value: parent_rubit.id %>
  <% end %>

  <%= form.button type: "submit", class: "btn btn-comment" do %>
    <i class="bi bi-check2"></i>
  <% end %>
<% end %>
