<h1>Rubitter Feed</h1>

<%= form_with(model: @rubit, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :content, "What's on your mind?" %>
    <%= form.text_area :content, rows: 3, class: "form-control" %>
  </div>
  <%= form.submit "Post Rubit", class: "btn btn-primary" %>
<% end %>

<hr>

<% @rubits.each do |rubit| %>
  <!-- Render the partial for each rubit -->
  <%= render partial: 'rubits/rubit', locals: { rubit: rubit } %>
<% end %>
